<view class="container">
  <block wx:for="{{icons}}" wx:key="*this">
    <view class="index-content-background">
          <image class="index-content-icon" src="{{item}}" background-size="cover" bindtap="bindViewTap"></image>
          <text class="index-content-title">{{titles[i]}}</text>
    </view>
  </block>
</view>
